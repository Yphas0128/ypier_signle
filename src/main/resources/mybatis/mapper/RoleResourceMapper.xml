<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.puda.mapper.RoleResourceMapper">

    <delete id="deleteAll">
        delete from pd_role_resource_relation where role_id = #{roleId}
    </delete>

    <insert id="insertList">
        insert  into pd_role_resource_relation (role_id,resource_id) values
        <foreach collection="list"  item="item" separator="," index="index">
            (#{item.roleId,jdbcType=BIGINT},#{item.resourceId,jdbcType=BIGINT})
        </foreach>
    </insert>
</mapper>